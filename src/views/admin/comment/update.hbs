<nav aria-label='breadcrumb'>
    <ol class='breadcrumb'>
        <li class='breadcrumb-item'><a href='/admin/binh-luan'>Bình luận</a></li>
        <li class='breadcrumb-item active' aria-current='page'>{{title}}</li>
    </ol>
</nav>
<section class='p-4 shadow rounded'>
    <form method='post' class='mb-0' enctype='multipart/form-data'>
        <div class='modal-body'>
            <div class='form-outline mb-4'>
                <input
                    type='text'
                    name='name'
                    value='{{comment.name}}'
                    class='form-control'
                    required
                />
                <label class='form-label bold' for='desc'>Tên
                    <span class='text-danger'>*</span></label>
            </div>
            <div class='mb-4'>
                <label class='form-label bold' for='customFile'>Nội dung <span
                        class='text-danger'
                    >*</span></label>
                <textarea
                    name='content'
                    class='form-control'
                    required
                >{{comment.content}}</textarea>
            </div>

            <div class='mb-3'>
                <label class='form-label bold' for='customFile'>Avatar</label>
                <input
                    type='file'
                    class='form-control'
                    id='customFile'
                    accept='image/*'
                    name='comment'
                    onchange="preview(this, 'avatarImg')"
                />
                <img id='avatarImg' src='{{comment.avatar}}' alt='' width='40%' class='mt-2' />
            </div>
        </div>
        <div class='modal-footer'>
            <a href='/admin/binh-luan' class='btn btn-secondary me-3'>Đóng</a>
            <button type='submit' class='btn btn-primary'>Cập nhật</button>
        </div>
    </form>
</section>

{{#if message.success}}
    <div
        class='toast fade mx-auto toast-success toast-fixed show'
        role='alert'
        aria-live='assertive'
        aria-atomic='true'
        data-mdb-autohide='true'
        data-mdb-position='top-right'
        data-mdb-append-to-body='true'
        data-mdb-stacking='true'
        data-mdb-width='350px'
        data-mdb-color='success'
        style='width: 350px; display: block; top: 10px; right: 10px; bottom: unset; left: unset; transform: unset;'
    >
        <div class='toast-header toast-success'>
            <i class='fas fa-check fa-lg me-2'></i>
            <strong class='me-auto'>Thành công</strong>
            <button
                type='button'
                class='btn-close'
                data-mdb-dismiss='toast'
                aria-label='Close'
            ></button>
        </div>
        <div class='toast-body'>{{message.success}}</div>
    </div>
{{/if}}
