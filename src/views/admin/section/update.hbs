<nav aria-label='breadcrumb'>
    <ol class='breadcrumb'>
        <li class='breadcrumb-item'><a href='/admin/section'>Section</a></li>
        <li class='breadcrumb-item active' aria-current='page'>{{title}}</li>
    </ol>
</nav>
<section class='p-4 shadow rounded'>
    <form method='post' class='mb-0' enctype='multipart/form-data'>
        <div class='modal-body'>
            <div class='form-outline mb-4'>
                <input
                    type='text'
                    name='title'
                    value='{{section.title}}'
                    class='form-control'
                    required
                />
                <label class='form-label bold' for='desc'>Tiêu đề
                    <span class='text-danger'>*</span></label>
            </div>
            <div class='mb-4'>
                <label class='form-label bold' for='customFile'>Mô tả</label>
                <textarea
                    name='description'
                    class='ckeditor'
                >{{section.description}}</textarea>
            </div>

            <div class='row mb-4'>
                <div class="col">
                    <div class="row">
                        <div class='col'>
                            <div class='form-outline'>
                                <input
                                    type='color'
                                    name="color1"
                                    class='form-control'
                                    value="{{section.backgroundColor.start}}"
                                />
                                <label class='form-label bold' for='form6Example1'>Màu nền 1</label>
                            </div>
                        </div>
                        <div class='col'>
                            <div class='form-outline'>
                                <input
                                    type='color'
                                    name="color2"
                                    class='form-control'
                                    value="{{section.backgroundColor.end}}"
                                />
                                <label class='form-label bold' for='form6Example1'>Màu nền 2</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='col'>
                    <div class='form-outline'>
                        <input
                            type='text'
                            name="link"
                            value="{{section.link}}"
                            class='form-control'
                        />
                        <label class='form-label bold' for='form6Example2'>Liên kết</label>
                    </div>
                </div>
            </div>

            <div class='mb-3'>
                <label class='form-label bold' for='customFile'>Hình ảnh</label>
                <input type="hidden" name="imageInp" id="imageHd" value="{{section.image}}">
                <input
                    type='file'
                    class='form-control'
                    id='imageInp'
                    accept='image/*'
                    name='section'
                    onchange="preview(this, 'previewImg')"
                />
                <img
                    id='previewImg'
                    src='{{section.image}}'
                    alt=''
                    width='30%'
                    class='mt-2'
                />
                <span style='cursor:pointer' onclick="removeUploadImg('imageInp', 'previewImg', 'imageHd')" class='text-danger'><i class="fa-solid fa-circle-xmark fa-xl"></i></span>
            </div>
        </div>
        <div class='modal-footer'>
            <a href='/admin/section' class='btn btn-secondary me-3'>Đóng</a>
            <button type='submit' class='btn btn-primary'>Cập nhật</button>
        </div>
    </form>
</section>
