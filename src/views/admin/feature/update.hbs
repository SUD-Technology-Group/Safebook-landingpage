<nav aria-label='breadcrumb'>
    <ol class='breadcrumb'>
        <li class='breadcrumb-item'><a href='/admin/tinh-nang'>Tính năng</a></li>
        <li class='breadcrumb-item active' aria-current='page'>{{title}}</li>
    </ol>
</nav>
<section class='p-4 shadow rounded'>
    <form method='post' class='mb-0' enctype='multipart/form-data'>
        <div class='modal-body'>
            <div class='form-outline mb-4'>
                <input
                    type='text'
                    name='title'
                    value='{{feature.title}}'
                    class='form-control border'
                    required
                />
                <label class='form-label bold' for='desc'>Tiêu đề
                    <span class='text-danger'>*</span></label>
            </div>

            <div class='mb-4'>
                <label class='form-label bold' for='customFile'>Mô tả</label>
                <textarea
                    name='description'
                    class='form-control'
                >{{feature.description}}</textarea>
            </div>

            <div class='mb-3'>
                <label class="form-label" for="customFile">Hình ảnh</label>
                <input type="hidden" name="imageInp" id="previewHd" value="{{feature.image}}">
                <input type="file" onchange="preview(this, 'previewImg')" class="form-control" id="previewInp" accept="image/*" name="feature"/>
                <img
                    src='{{feature.image}}'
                    alt=''
                    id='previewImg'
                    width='30%'
                    class='mt-2'
                />
                <span style='cursor:pointer' onclick="removeUploadImg('previewInp', 'previewImg', 'previewHd')" class='text-danger'><i class="fa-solid fa-circle-xmark fa-xl"></i></span>
            </div> 
        </div>
        <div class='modal-footer'>
            <a href='/admin/tinh-nang' class='btn btn-secondary me-3'>Đóng</a>
            <button type='submit' class='btn btn-primary'>Cập nhật</button>
        </div>
    </form>
</section>